

@model loja.Models.Usuario
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">

        <div style="text-align:center">
            <div class="card">
                <article class="card-body">
                    <h4 class="card-title text-center mb-4 mt-1">Portal do lojista</h4>
                    <hr>

                    @using (Html.BeginForm("Loja", "Home", FormMethod.Post))
                    {
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                                </div>
                                @Html.TextBoxFor(m => m.login, new { Class = "form-control" })
                          
                            </div> <!-- input-group.// -->
                        </div> <!-- form-group// -->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                </div>
                                @Html.TextBoxFor(m => m.senha, new { Class = "form-control"  })
                            </div> <!-- input-group.// -->
                        </div> <!-- form-group// -->
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> Login  </button>
                        </div> <!-- form-group// -->
                    }
                </article>
            </div> <!-- card.// -->

        </div>


    </div>
    <div class="col-md-4"></div>
</div>
